<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.phonegap.vardhamanbullion.live"
        versionCode="10010"
        android-versionCode="10010"
        version   = "1.0.0">


    <name>Vardhaman Gold</name>

    <description>
        Vardhaman Gold is a renowned company providing Gold and Silver Bullion, Jewellery in India. Established in 
        Jan 2000, it has grown leaps and bounds and is now a leading company providing competitive rates and impeccable service
    </description>

    <author href="http://www.nemsolutions.com" email="amitjain231@gmail.com">
        Amit kumar Jain
    </author>

	
	<gap:platform name="android" />
	<gap:plugin name='cordova-plugin-whitelist' spec='1.0.0' source='npm' />
	<access origin="*" />	
	<allow-navigation href="http://*/*" />
	<allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
	
	
	<!-- ANDROID * ANDROID * ANDROID -->
	<preference name="orientation"                	value="portrait" /> 
	<preference name="AutoHideSplashScreen" value="false" />
	<preference name="SplashScreen" 			value="screen" />	
	<preference name="SplashScreenDelay" 	value="3000"/>	

	<icon src="icon.png" platform="android" density="ldpi" />
	<icon src="icon.png" platform="android" density="mdpi" />
	<icon src="icon.png" platform="android" density="hdpi" />
	<icon src="icon.png" platform="android" density="xhdpi" />

	<gap:splash src="splash.png"      	gap:platform="android" gap:qualifier="port-ldpi" />
    <gap:splash src="splash.png"    		gap:platform="android" gap:qualifier="port-mdpi" />
    <gap:splash src="splash.png"    		gap:platform="android" gap:qualifier="port-hdpi" />
    <gap:splash src="splash.png"  		gap:platform="android" gap:qualifier="port-xhdpi" />
    <gap:splash src="splash.png"         gap:platform="blackberry" />
    <gap:splash src="splash.png"         gap:platform="ios"     width="320" height="480" />
    <gap:splash src="splash.png"      	gap:platform="ios"     width="640" height="960" />
    <gap:splash src="splash.png" 		gap:platform="ios"     width="640" height="1136" />
    <gap:splash src="splash.png"       	gap:platform="ios"     width="768" height="1024" />
    <gap:splash src="splash.png"   		gap:platform="ios"     width="1024" height="768" />
    <gap:splash src="splash.jpg"      	gap:platform="winphone" />

	
